<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.LoginMapper">
    <insert id="saveuser">
        insert into glxt_user values(UUID(),#{username},#{password},#{phone},#{email});
    </insert>


    <select id="getter1" resultType="com.example.demo.entity.Glxt_User">
        SELECT * from User1;
    </select>
    <select id="getPassword" resultType="java.lang.String">
        SELECT password from glxt_user where username = #{username};
    </select>
    <select id="getusercount" resultType="java.lang.Integer">
        SELECT count(*) from glxt_user where username = #{username};
    </select>
</mapper>
